/*tab切换*/

.tab ul {
  display: flex;
  width: 100%;
  height: 120rpx;
  border-bottom: 1px solid #e5e5e5;
}

.tab li {
  flex: 1;
}

.tab li .content {
  margin: 0 auto;
  width: 80%;
  height: 100%;
}

.tab li .content image {
  padding: 10rpx 0 6px 0;
  margin: 0 auto;
  width: 55rpx;
  height: 55rpx;
}

.tab li .content .font {
  text-align: center;
  font-size: 12px;
    overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
