/* components/selectTabs.wxss */
.select-tabs{
  position: relative;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  color: #BEBEBE;
  background: #ffffff;
  border-top: 2rpx solid #f6f6f6;
  border-bottom: 2rpx solid #f6f6f6;
}
.select-tabs:before{
  content: " ";
  display: block;
  width: 2rpx;
  height: 60%;
  background: #F0F0F0;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%)
}
.select-tabs>li{
  position: relative;
  flex: 1;
  text-align: center;
  line-height: 44px;
  height: 44px;
  font-size: 14px;
}
.select-tabs>li.active{
  font-weight: 700;
}
.select-tabs>li.active:after{
  content: " ";
  display: block;
  width: 100%;
  height: 6rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}
.red{
  color: #E0001B;
}
.red:after{
  background: #E0001B;
}
.yellow{
  color: #FF950D;
}
.yellow:after{
  background: #FF950D;
}