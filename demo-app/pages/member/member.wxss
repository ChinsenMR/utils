.live-block {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}

.live-block .live-container {
  display: flex;
  position: relative;
  width: 100%;
  /* height: 110rpx;
   */
  /* padding: 17rpx 20rpx; */
  padding-left: 68rpx;
  padding-right: 30rpx;
}

.live-block .live-container .live-bg {
  position: absolute;
  left: 0;
  top: 0;
}

.live-block .live-container .list-block-left {
  width: 490rpx;
  font-size: 28rpx;
  color: #fff;
}
.live-block .live-container .list-block-left  .text-content{
  position: relative;
  z-index: 2;
}
.live-block .live-container .list-block-left  .text-content .b-text{
  font-size: 30rpx;
}
.live-block .live-container .list-block-left  .text-content .s-text{
  font-size: 24rpx;
}

.live-block .live-container .list-block-right {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
}

.live-block .live-container .list-block-right .jump-btn {
  width: 100%;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  height: 50rpx;
  padding: 0 16rpx;
  border-radius: 30rpx;
  border: 1px solid rgba(255, 255, 255, 1);
  background: none;
  overflow: visible;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}
.live-block .live-container .list-block-right .jump-btn image{
  width: 32rpx;
  height:32rpx;
}

.live-block .live-container .list-block-right .jump-btn::after {
  border: none
}

