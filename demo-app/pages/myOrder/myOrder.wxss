page{
  padding-top: 80rpx;
  margin-bottom: 92rpx;
  box-sizing: border-box;
}
.sku-content{
  font-size: 12px;
  color: #666;
}
.nav {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  display: flex;
  margin-bottom: 30rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.left {
  position: relative;
}

.left::after {
  content: '';
  position: absolute;
  display: block;
  width: 2rpx;
  height: 40rpx;
  top: 20rpx;
  right: 0;
  background-color: #eee;
}

.default {
  flex: 1;
  text-align: center;
  color: #bebebe;
}

.red {
  flex: 1;
  text-align: center;
  font-weight: 600;
  color: #e0001b;
  border-bottom: 6rpx solid #e0001b;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

.orderList {
  margin-top: 30rpx;
  background-color: #fff;
}

.orderList .ol_top {
  display: flex;
  padding: 26rpx;
  font-size: 27rpx;
  justify-content: space-between;
  border-bottom: 2rpx solid #f5f5f5;
}

.orderList .ol_top .ott_left {
  display: flex;
}

.orderList .ol_top .ot_left {
  margin-top: 6rpx;
  margin-right: 30rpx;
  width: 34rpx;
  height: 34rpx;
}

.orderList .ol_top .ot_center {
  color: #999;
}

.orderList .ol_top .ot_right {
  color: #e0001b;
}

.orderList .ol_center {
  display: flex;
  padding: 30rpx;
  font-size: 30rpx;
  max-width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f5f5f5;
  background-color: #fff;
}

.orderList .ol_center .oc_left {
  width: 30%;
  flex-shrink: 0;
  margin-right: 30rpx;
  height: 210rpx;
}
.orderList .ol_center .oc_right{
  position: relative;
  flex: 1;
}
.title{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  height: 40px;
  line-height: 20px;
  overflow: hidden;
  word-break: break-all;
}
.btn-refund{
  position: absolute;
  bottom: 0;
  right: -10rpx;
  color: #666;
}
.orderList .ol_center .ocr_bottom {
  /* display: flex; */
  margin-top: 30rpx;
  /* justify-content: space-between; */
}

.orderList .ol_center .ocr_bottom .price {
  color: #e0001b;
  margin-right: 1em;
}

.orderList .ol_center .ocr_bottom .num {
  color: #999;
  font-size: 28rpx;
}

.orderList .ol_all {
  display: flex;
  width: 100%;
  padding: 20rpx;
  font-size: 30rpx;
  text-align: right;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f5f5f5;
  color: #999;
  justify-content: space-between;
  align-items: center;
}

/* .orderList .ol_all .all {
  width: 40%;
}

.orderList .total {
  width: 40%;
  text-align: right;
} */

.orderList .ol_bottom {
  display: flex;
  flex-direction: row-reverse;
  padding: 20rpx;
  color: #666;
}

.orderList .check,.pay-now {
  margin-left: 10rpx;
  padding: 20rpx 32rpx;
  border-radius: 6rpx;
  font-size: 28rpx;  
  
}
.check{
  border: 2rpx solid #999;
}
.orderList .ol_bottom .help,.pay-now{
  border: 2rpx solid #e0001b;
  color: #fff;
  background-color: #e0001b;
}
.bottom {
  display: flex;
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  align-items: flex-start;
  font-size: 30rpx;
  color: #999;
  background-color: #fff;
  border-top: 2rpx solid #f5f5f5;
}

.bottom .center {
  width: 30%;
  padding:26rpx 0;
}

.bottom .select {
  display: flex;
  width: 35%;
  align-items: center;
  padding:26rpx 0 26rpx 30rpx;
}

.bottom .select image {
  margin-right: 10rpx;
  width: 14%;
  height: 34rpx;
}

.bottom .right {
  text-align: center;
  width: 35%;
}

.bottom .right {
  padding: 26rpx 0;
  color: #fff;
  background-color: #e0001b;
}

/*缺省页*/
.empty{
  position: fixed;
  top: 30%;
  left: 50%;
  transform: translate(-50%,-40%);
  color: #666666;
  text-align: center;
  font-size: 16px;
}
.empty>image{
  width: 360rpx;
  height: 360rpx;
}