.nav {
  display: flex;
  margin-bottom: 30rpx;
  margin-top: 2rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.left {
  position: relative;
}

.left::after {
  content: '';
  position: absolute;
  display: block;
  width: 2rpx;
  height: 40rpx;
  top: 20rpx;
  right: 0;
  background-color: #eee;
}

.default {
  flex: 1;
  text-align: center;
  color: #bebebe;
}

.red {
  flex: 1;
  text-align: center;
  font-weight: 600;
  color: #e0001b;
  border-bottom: 6rpx solid #e0001b;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

.list {
  display: flex;
  padding: 26rpx 26rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  max-width: 100%;
  width: 100%;
  overflow: hidden;
  margin-bottom: 2rpx;
  background-color: #fff;
}

.list .l_left {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.list .l_left view.info {
  max-width: 100%;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.list .l_left .time {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #999;
}

.list .l_right {
  flex-shrink: 0;
  text-align: right;
}

.list .l_right .money {
  color: #000;
}

.list .l_right .shouru {
  color: #e0001b;
}

.list .l_right .finish {
  font-size: 24rpx;
  color: #bebebe;
}

.list .l_right .wait {
  font-size: 24rpx;
  color: #29c500;
}

.list .l_right text {
  font-size: 28rpx;
}


.empty{
  position: fixed;
  top: 30%;
  left: 50%;
  transform: translate(-50%,-40%);
  color: #666666;
  font-size: 14px;
  text-align: center;
}
.empty>image{
  width: 360rpx;
  height: 360rpx;
}