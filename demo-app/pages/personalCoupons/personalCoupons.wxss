.empty {
  position: fixed;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -40%);
}

.empty>image {
  width: 360rpx;
  height: 360rpx;
}

.empty>.empty-text {
  display: block;
  font-size: 32rpx;
  text-align: center;
  color: #666;
}


.box{
  position: relative;
  margin-bottom: 20rpx;
  background-color: #FF6578;
  height:170rpx;
  width: 100%;
}

.coupons image {
  width: 100%;
  height: 170rpx;
}
.coupons .item{
  position: absolute;
  display: flex;
  width: 100%;
  top: 20rpx;
  left: 0;
}

.coupons .item .content {
  display: flex;
  width: 79%;
  height: 150rpx;

}

.coupons .item .content .left {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 34%;
  font-size: 16px;
  color: #e0001b;
}

.coupons .item .content .left .money {
  font-size: 36px;
  margin-bottom: 30rpx;
  margin-left: 6rpx;
}

.coupons .item .content .right {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 66%;
  flex-direction: column;
}

.coupons .item .content .right .time {
  font-size: 22rpx;
  color: #a6a6a6;
}

.coupons .item .content .right .font {
  font-size: 18px;
  margin-bottom: 6rpx;
  color: #333;
}

.btn {
  margin-top: 40rpx;
  width:21%;  
  height: 160rpx;
  /* line-height: 160rpx; */
  text-align: center;
  font-weight: bold;  
  font-size: 36rpx;
  color: #fff;
}

.bg-red {
  background-color: #FF6578;
}

.bg-grey {
  background-color: #CCCCCC;
}
.fontcolor-red{
  color: #FF6578;
}

.fontcolor-grey{
  color: #A6A6A6 !important;
}
.fontcolor-black{
  color: #333;
}