.title{
  display: flex;
  justify-content: center;
  margin: 30rpx 0 30rpx 0;
}
.title image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.title text{
  font-size:28rpx;
  color: #333333;
}
.raffle{
  width: 690rpx;
  background-color: white;
  margin: 0 auto;
  border-radius: 10rpx;
}
.raffle .raffel_con{
  display: flex;
}
.raffle .raffel_con:last-child{
  padding-bottom: 30rpx;
}
.raffle .raffel_con .left{
  font-size: 28rpx;
  color: #999999;
  margin: 28rpx 0 0 19rpx;
  flex-shrink: 0;
}
.raffle .raffel_con .right{
  font-size: 28rpx;
  color: #333333;
  margin: 28rpx 0 0 19rpx;
}
.join{
  width: 690rpx;
  height: 88rpx;
  background-color: white;
  border-top: 1rpx solid #E5E5E5;
  margin: 0 auto 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.join .text{
  font-size: 28rpx;
  color: #333333;
  padding-left: 21rpx;
}
.join image{
  width: 20rpx;
  height: 20rpx;
  margin-right: 21rpx;
}

.empty{
  position: fixed;
  top: 40%;
  left: 50%;
  transform: translate(-50%,-50%);
  color: #666666;
  font-size: 14px;
  text-align: center;
}
.empty>image{
  width: 360rpx;
  height: 360rpx;
}