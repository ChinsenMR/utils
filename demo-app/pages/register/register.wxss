/* pages/register/register.wxss */
page{
  background: #f5f5f5;
}
.top{
  padding-left: 30rpx;
  box-sizing: border-box;
  border-top: 2rpx solid #e5e5e5; 
  border-bottom: 2rpx solid #e5e5e5; 
  background: #ffffff;
}
.top>.item{
  display: -webkit-flex;
  display: flex;
  align-items: center;
  padding: 20rpx 0; 
  /* height: 88rpx; */
  box-sizing: border-box;
  border-bottom: 2rpx solid #e5e5e5; 
}
.top>.item:last-child{
  border-bottom: none;
}
.item>.left{
  width: 92px;
  margin-right: 27rpx;
}
.item>.left>image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 30rpx;
}
.item>.left>label{
  font-size: 28rpx;
  color: #333333;
}
.item>input{
  margin-top: 8rpx; 
  font-size: 26rpx;
  line-height: 50rpx;
}
.bottom{
  margin-top: 60rpx;
  padding: 0 30rpx;
  width: 100%;
  height: 88rpx;
  box-sizing: border-box;
}
.bottom>button{
  font-size: 30rpx;
  border-radius: 8rpx;
  line-height: 88rpx;
}
.bottom>.btn-register{
  background: #E0001B;
  color: #ffffff;
}
.bottom>.btn-login{
  margin-top: 40rpx;
  color: #E0001B;
  border: 2rpx solid #E0001B;
}