/* pages/integral/integral.wxss */
.top{
  width: 100%;
  height: 88rpx;
  background-color: white;
  font-size: 16px;
  font-weight: bold;
  color: #333333;
  display: flex; 
  align-items: center;
}
.top image{
  width: 34rpx;
  height: 34rpx;
  display: flex;
  margin-right: 40%;
}
.top text{
  display: flex;
}
.banner{
  width: 100%;
  height: 326rpx;
  position: relative;
}
.banner .circle{
  width: 187rpx;
  height: 187rpx;
  background-color: transparent;
  border: 1px #FE7272 solid;    
  -webkit-border-radius: 100px;
  position: absolute;
  top: 70rpx;
  left: 282rpx;
  z-index: 10
}
.banner .circle .circles{
  width: 160rpx;
  height: 160rpx;
  background-color: transparent;
  border: 3px #FB565E solid;    
  -webkit-border-radius: 100px;
  margin: 7rpx 0 0 8rpx;
}
.banner .circle .circles .text{
  font-size: 26rpx;
  color: white;
  display: flex;
  justify-content: center;
  margin-top: 35rpx;
}
.banner .circle .circles .num{
  font-size: 48rpx;
  color: white;
  display: flex;
  justify-content: center;
}
.banner .img{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 38rpx;
  right: 130rpx;
  z-index: 999
}
.banner .rtop{
  width: 15%;
  height: 43rpx;
  line-height: 43rpx;
  font-size: 26rpx;
  color: #E0001B;
  padding-left: 53rpx;
  background-color: white;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  position: absolute;
  top: 31rpx;
  right: 0
}
.convert{
  width: 100%;
  height: 88rpx;
  background-color: white;
  border-bottom: 1px solid #E5E5E5;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.convert .left{
  width: auto;
  font-size: 28rpx;
  padding-left: 20rpx;
  color: #E0001B;
  border-left: 4rpx solid #E0001B;
}
.convert .right{
  color: #666666;
  font-size: 26rpx;
  margin-right: 57rpx;
  display: flex
}
.convert .right .right_icon{
  width: 28rpx;
  height: 28rpx;
  margin: 5rpx 0 0 15rpx
}
.list{
  width: 100%;
  height: auto;
  background-color: white;
  display: flex;
  box-sizing: border-box;
  position: relative;
  border-bottom: 1rpx solid #E5E5E5;
}

.list .img image{
  width: 204rpx;
  height: 204rpx;
}
.list .content{
  font-size: 26rpx;
  color: #333333;
  overflow : hidden;
  margin: 34rpx 31rpx 0 0;
}
.list .content .remain{
  font-size: 24rpx;
  color: #999999;
}
.list .content .need{
  font-size: 24rpx;
  color: #999999;
  display: flex;
  margin-top: 22rpx;
}
.list .content .need .span{
  font-size: 26rpx;
  color: #E0001B;
}
.list .content .div{
  width: 13%;
  height: 44rpx;
  background-color: #F6263F;
  font-size: 26rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 4rpx;
  position: absolute;
  top: 122rpx;
  right: 30rpx;
}