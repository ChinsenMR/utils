/* pages/productDetail/productDetail.wxss */
@import "/wxParse/wxParse.wxss";

page {
  background: #f5f5f5;
}

.banner-wrap {
  position: relative;
  width: 100%;
  background: #fff;
}

.collect {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 48rpx;
  height: 48rpx;
}

/* 分享二维码 */

.qrcode {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: 30rpx;
  right: 100rpx;
}

/*商品标题等 */

.pro-top {
  padding: 30rpx 30rpx 10rpx;
  box-sizing: border-box;
  background: #fff;
  color: #333;
  position: relative;
}

.titleTop {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.titleTop .title {
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden; /** 隐藏超出的内容 **/
  font-size: 15px;
  color: #333;
  width: 60%;
}

.shareicon {
  height: 55rpx;
  display: flex;
  align-items: center;
}

.shareicon image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 2rpx solid #e5e5e5;
}

.shareicon .text {
  font-size: 36rpx;
  margin: 0 0 0 15rpx;
}

.shareicon .triangle {
  /* display: inline-block;
	vertical-align: middle;
	width: 0;
	height: 0; */
  border: 6px solid transparent;
  border-top-color: #666;
  margin: 50% 0 0 0;
}

.addr-box {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  font-size: 15px;
  z-index: 1000;
  background: #fff;
  text-align: center;
  animation: to-up 0.5s linear;
}

@keyframes to-up {
  0% {
    bottom: -999px;
  }

  100% {
    bottom: 0;
  }
}

.btn-box {
  padding: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  color: #333;
  overflow:hidden;
}

.addr-cancel, .addr-sure {
  padding: 8px 18px;
  border: 1px solid #efefef;
  border-radius: 4px;
}

.addr-sure {
  color: #fff;
  background: #49cb5f;
  border-color: #49cb5f;
}

.addr-cover {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  background: rgba(0, 0, 0, 0.3);
}

.price-box {
  margin-top: 26rpx;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-box>.price-left {
  font-size: 12px;
  padding-bottom: 10rpx;
  display: flex;
  align-items: flex-end;
  color: #999;
}

.price-box>.price-left>.icon-red {
  color: #ff5000;
}

.price-box>.price-left>.discount-price {
  color: #ff5000;
  font-size: 20px;
  font-weight: bold;
  line-height: 20px;
}

.price-left-br {
  font-size: 14px;
  border-top: 1rpx solid #e5e5e5;
  padding-top: 10rpx;
}

.price-left-br .discount-price {
  color: #ffa500;
  font-size: 12px;
}

.original-price {
  margin: 0 12rpx 0 12rpx;
  font-size: 30rpx;
  display: inline-block;
  text-decoration: line-through;
  color: #999;
}

.price-box>.price-left .icon-gray {
  font-size: 12px;
}

.price-box>.right {
  color: #999;
  font-size: 12px;
}

/* 促销 */

.pro-sales {
  width: 100%;
  background-color: white;
  margin-top: 10px;
  position: relative;
}

.pro-sales-title {
  margin-left: 5%;
  display: flex;
  align-items: center;
  width: 90%;
  height: 66rpx;
  color: #333;
  font-size: 32rpx;
}

.pro-sales-title:first-child {
  border-bottom: 2rpx solid #e5e5e5;
}

.pro-sales-title .detail {
  color: #e0001b;
  font-size: 28rpx;
  font-weight: bold;
}

.pro-sales .cuxiao {
  width: 80rpx;
  height: 45rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 45rpx;
  position: absolute;
  top: 15rpx;
  left: 125rpx;
  border-radius: 4rpx;
  background-color: #f6bb42;
}

.pro-sales .txt {
  color: #e0001b;
  font-size: 28rpx;
  position: absolute;
  top: 20rpx;
  left: 220rpx;
  display: flex;
}

.tips {
  color: white;
  font-weight: lighter;
  background-color: #f6bb42;
  text-align: center;
  padding: 0 5rpx;
}

/*规格  */

.pro-mid {
  margin-top: 10px;
  padding-left: 30rpx;
  box-sizing: border-box;
  background: #fff;
  font-size: 14px;
}

.pro-mid>.pro-mid-title {
  display: block;
  padding-top: 20rpx;
  box-sizing: border-box;
}

.pro-mid>.pro-mid-detail {
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
}

.pro-mid-detail>.item {
  padding-right: 30rpx;
  padding-bottom: 30rpx;
  box-sizing: border-box;
  display: -webkit-flex;
  display: flex;
  font-size: 14px;
  color: #999;
  border-bottom: 2rpx solid #e5e5e5;
}

.pro-mid-detail>.item>text {
  flex-shrink: 0;
  /* width: 120rpx; */
  margin-top: 30rpx;
}

.sku-list {
  /* flex: 1; */
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
}

.sku-list>.sku {
  margin-top: 30rpx;
  margin-left: 30rpx;
  padding: 0 10rpx;
  display: block;
  /* width: 140rpx; */
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  border: 2rpx solid #999;
  box-sizing: border-box;
  border-radius: 4px;
}

.pro-mid>.pro-mid-detail .selected {
  color: #e0001b;
  border-color: #e0001b !important;
}

.pro-mid>.pm-quantity-box {
  padding-right: 30rpx;
  box-sizing: border-box;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
}

.pro-mid>.pm-quantity-box>.pm-right {
  display: -webkit-flex;
  display: flex;
  overflow: hidden;
}

.pm-quantity-box>.pm-right>.quantity {
  margin-right: 18rpx;
  font-size: 12px;
  color: #999;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.btn-box>.reduce, .btn-box>.add {
  display: inline-block;
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  color: #fff;
  background: #c9c9c9;
  vertical-align: middle;
  border-radius: 2px;
  font-size: 15px;
}

.btn-box>.active {
  background: #e8e8e8;
}

.btn-box>.count {
  display: inline-block;
  width: 120rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  vertical-align: middle;
  font-size: 15px;
  font-weight: 700;
}

.pro-bottom {
  margin-top: 10px;
  background: #fff;
  margin-bottom: 98rpx;
}

.pro-bottom>.nav {
  display: -webkit-flex;
  display: flex;
  font-size: 14px;
  color: #999;
  border-top: 2rpx solid #e5e5e5;
  border-bottom: 2rpx solid #e5e5e5;
  box-sizing: border-box;
}

.pro-bottom>.nav>view {
  position: relative;
  flex: 1;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
}

.pro-bottom>.nav>view.active {
  color: #e0001b;
  font-weight: 700;
}

.nav>view.active:after {
  content: " ";
  display: block;
  width: 100%;
  height: 4rpx;
  position: absolute;
  bottom: 0px;
  left: 0;
  background: #e0001b;
}

.nav>view.left-line:before {
  content: " ";
  display: block;
  width: 2rpx;
  height: 60%;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  background: #e5e5e5;
}

/*商品详情  */

.info-detail {
  width: 100%;
}

.info-detail>image {
  width: 100%;
}

/*底部固定导航栏  */

.tab-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
  display: -webkit-flex;
  display: flex;
  align-items: flex-start;
  height: 98rpx;
  width: 100%;
  max-width: 100%;
  background: #fff;
}

.tab-nav>view {
  flex: 1;
}

.tab-nav>.left {
  position: relative;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  height: 100%;
}

.tab-nav>.left:after {
  content: " ";
  display: block;
  width: 2rpx;
  height: 80%;
  background: #e5e5e5;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.tab-nav>.left>.tab-item {
  flex: 1;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  color: #666;
}

.tab-item image {
  width: 48rpx;
  height: 48rpx;
}

.tab-item>text {
  display: block;
}

.add-cart, .buy-now, .conversion {
  text-align: center;
  color: #fff;
  font-size: 15px;
  font-weight: 700;
  height: 98rpx;
  line-height: 98rpx;
}

.add-cart {
  background: #f6263f;
}

.buy-now {
  background: #e0001b;
}

.conversion {
  background: #f6263f;
}

/*咨询、评价 */

.content {
  padding: 30rpx 30rpx;
  border-top: 2rpx solid #e5e5e5;
  box-sizing: border-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  background: #fff;
}

.content>image {
  flex-shrink: 0;
  width: 144rpx;
  height: 144rpx;
  margin-right: 18rpx;
}

.content>.right>.title {
  display: block;
  height: 34px;
  line-height: 17px;
  font-size: 13px;
  color: #333;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden; /** 隐藏超出的内容 **/
}

.content>.right {
  width: 80%;
}

.content>.right>.button {
  margin-top: 40rpx;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.right>.button>.money {
  font-size: 15px;
  color: #e0001b;
}

.sale-count {
  font-size: 12px;
  color: #999;
}

textarea {
  margin-top: 20px;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  font-size: 13px;
  width: 100%;
  height: 337rpx;
}

button {
  margin: 0 auto;
  margin-top: 60rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  width: 90%;
  height: 100%;
  background: #e0001b;
  color: #fff;
  font-size: 15px;
  border-radius: 4px;
}

/*评价  */

.all-evaluate {
  background: #fff;
}

.all-evaluate>.ae-top {
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  width: 100%;
  font-size: 14px;
  font-weight: 700;
}

.all-evaluate>.ae-top image {
  margin-right: 14rpx;
  margin-top: 4px;
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
}

.evaluate-contents {
  padding-left: 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #e5e5e5;
}

.items {
  padding: 30rpx 30rpx 30rpx 0;
  box-sizing: border-box;
  border-bottom: 2rpx solid #e5e5e5;
}

.items:last-child {
  border-bottom: none;
}

.items>.items-top {
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #999;
}

.items>.items-content {
  font-size: 14px;
  color: #666;
  width: 100%;
  word-break: break-all;
}

/*缺省页  */

.empty {
  padding-bottom: 98rpx;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 14px;
}

.empty>image {
  width: 360rpx;
  height: 360rpx;
}

.buy-item {
  margin-top: 10px;
  display: flex;
  padding: 10px;
  box-sizing: border-box;
  background: #fff;
  font-size: 13px;
}

.bi-name {
  margin-right: 10px;
  flex-shrink: 0;
}

.bi-content {
  position: relative;
  flex: 1;
  padding-right: 20px;
  box-sizing: border-box;
}

.border-bottom {
  border-bottom: 2rpx solid #f5f5f5;
}

.bi-content::after {
  content: "";
  position: absolute;
  top: 50%;
  right: 8px;
  display: block;
  width: 8px;
  height: 8px;
  transform: rotateZ(45deg) translateY(-50%);
  border-width: 1px;
  border-style: solid;
  border-color: #999 #999 transparent transparent;
}

.text-right {
  text-align: right;
  color: #666;
}

/* 参数 */

.id-text {
  height: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 14px;
  color: #666;
}

.id-text>text {
  position: relative;
}

.id-text>text::before, .id-text>text::after {
  content: "";
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  display: inline-block;
  width: 100rpx;
  height: 2rpx;
  background: #666;
}

.id-text>text::before {
  left: 130%;
}

.id-text>text::after {
  right: 130%;
}

.property-wrap {
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 50rpx;
  box-sizing: border-box;
}

.property {
  border-top: 2rpx solid #e5e5e5;
}

.property-item {
  display: flex;
  border-bottom: 2rpx solid #e5e5e5;
  border-left: 2rpx solid #e5e5e5;
  border-right: 2rpx solid #e5e5e5;
}

.property-key, .property-value {
  padding: 8px 8px;
  box-sizing: border-box;
  font-size: 12px;
  color: #666;
  word-break: break-all;
  height: 100%;
}

.property-key {
  position: relative;
  width: 30%;
}

.property-key::before {
  content: " ";
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  width: 2rpx;
  height: 100%;
  background: #e5e5e5;
}

.property-value {
  width: 70%;
}
