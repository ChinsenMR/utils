/* pages/IntegralZone/IntegralZone.wxss */
page{
  height:100%;
  background-color: #E5237C;
}
.banner{
  width: 100%;
  height: 330rpx;
  display: flex;
  justify-content: center;
}

.content{
  width: 100%;
  height: auto;
  box-sizing: content-box;
  /* min-height: 100%;    */
  background-color: #E5237C;
}
.title{
  width: 420rpx;
  height: 20rpx;
  position: relative;
  padding-top: 34rpx;
  margin: 0 auto;
}
.title .text{
  font-size: 36rpx;
  color: white;
  position: absolute;
  top: 10rpx;
  left: 85rpx;
}
.li{
  display: flex;
  width: 714rpx;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-left: 20rpx;
  padding-bottom: 20rpx 
}
.list{
  width: 348rpx;
  height: auto;
  background-color: white;
  margin: 28rpx 0 0 0;
}
.list image{
  width: 348rpx;
  height: 348rpx;
}
.list .jifen{
  width: 182rpx;
  height: 32rpxl;
  border-radius: 19rpx;
  background-color: #EF348A;
  color: white;
  font-size: 24rpx; 
  display: flex;
  justify-content: center;
  margin: 0 auto 11rpx;
}
.list .txt{
  font-size: 24rpx;
  color: #333333;
  border-top: 1rpx solid #E5E5E5;
  padding: 15rpx 5rpx 0 13rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  line-height: 28rpx;
  height: 56rpx;
}
.list .price{
  font-size: 32rpx;
  color: #E0001B;
  margin: auto 0 13rpx 13rpx;
}
.list .price text{
  font-size: 24rpx;
  color: #999999;
  margin-left: 42rpx;
  text-decoration: line-through;
}
/*缺省页*/
.empty{
  margin: 100rpx auto;
  padding-bottom: 30rpx;
  box-sizing: border-box;
  color: white;
  text-align: center;
  font-size: 16px;
}
.empty>image{
  margin: 0 auto;
  width: 360rpx;
  height: 360rpx;
}