/* pages/headingCode/headingCode.wxss */

page {
  background-color: #f5f5f5;
}

.overall {
  background-color: white;
}

.conten {
  width: 92%;
  display: flex;
  margin: 0 auto;
  padding: 20rpx;
  justify-content: space-between;
  border-bottom: 2rpx solid #e5e5e5;
}

/* 左 */

.conten .left_images {
  width: 20%;
}

.conten .unleft_images {
  filter: grayscale(100%);
  width: 20%;
}

.conten .left_images image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border:2rpx solid #e5e5e5;
}

.conten .unleft_images image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

/* 右 */

.conten .right_conten {
  width: 80%;
}

/* 右上 */

.conten .title {
  display: flex;
  align-items: flex-end;
}

.conten .title text {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.conten .title .status {
  font-size: 20rpx;
  color: #43b1fd;
  margin-left: 10rpx;
}

.conten .title .unStatus {
  font-size: 20rpx;
  color: #666;
  margin-left: 10rpx;
}

/* 右下 */

.brief {
  font-size: 22rpx;
  color: #c0c0c0;
  margin-top: 10rpx;
}

.securities {
  display: flex;
  align-items: center;
}

.securities image {
  width: 82rpx;
  height: 37rpx;
  margin: 20rpx 0 0 0;
}

.onText {
  font-size: 20rpx;
  color: #f00;
  margin: 20rpx 0 0 10rpx;
}

.inText {
  font-size: 20rpx;
  color: #666;
  margin: 20rpx 0 0 10rpx;
}
/* 返回 */
.return{
  position: fixed;
  right: 15rpx;
  top: 70%;
}
/* 刷新 */

.refresh {
  position: fixed;
  right: 15rpx;
  top: 80%;
}

.refreshAn {
  position: fixed;
  right: 15rpx;
  top: 80%;
  animation: iconrotate 1s linear 1;
}

.refreshimg {
  width: 96rpx;
  height: 96rpx;
}

@keyframes iconrotate {
  0% {
    transform: rotate(0deg);
  }

  50% {
    transform: rotate(180deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.btn123 {
  width: 100%;
  height: 200rpx;
  background-color: red;
}
