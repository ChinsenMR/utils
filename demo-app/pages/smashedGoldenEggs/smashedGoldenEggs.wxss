/* pages/smashedGoldenEggs/smashedGoldenEggs.wxss */

.box {
  position: relative;
}

.bg {
  width: 100%;
  height: 1710rpx;
}

.content {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1652rpx;
}

/*砸金蛋文字  */

.content .contentTitle {
  position: relative;
}

.content .contentTitle .title {
  margin: 0 auto;
  width: 520rpx;
  height: 264rpx;
}

.content .contentTitle .date {
  position: absolute;
  bottom: 48rpx;
  left: 31%;
  font-size: 24rpx;
  color: #fff;
}

.content .winnerBox {
  position: relative;
  display: flex;
  justify-content: flex-end;
  width: 100%;
  z-index: 999;
}

.content .winnerBox .winner {
  position: relative;
  right: 0;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  border-bottom-left-radius: 30rpx;
  border-top-left-radius: 30rpx;
  background-color: #d95449;
}

/*锤子  */

.hammerBox {
  position: relative;
  display: flex;
  justify-content: flex-end;
  width: 100%;
  height: 140rpx;
}

.hammerBox .hammer {
  position: absolute;
  margin-right: 80rpx;
  width: 142rpx;
  height: 140rpx;
  right: -20rpx;
  top: -30rpx;
}

/*金蛋  */

.eggBox {
  position: relative;
  width: 100%;
  height: 534rpx;
}

.eggBox .egg,.first-egg {
  position: absolute;
  top: -407rpx;
  width: 90%;
  height: 656rpx;
  margin: 0 auto;
}
.first-egg {
  top: -399rpx;
  transition: all .3s linear;
}
.hidden{
  opacity: 0
}
/* .eggBox .redPacket {
  position: absolute;
  top: -90rpx;
  left: 0;
  width: 98%;
  height: 70%;
} */
.eggBox .gift{
  position: absolute;
  bottom: 40rpx;
  left: 0;
  width: 100%;
  z-index: 1;
  transform:scale(.7);

}
/*开始砸蛋  */

.begin {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: -180rpx auto 0;
  width: 390rpx;
  height: 70rpx;
  border-radius: 30rpx;
  font-weight: 600;
  font-size: 32rpx;
  color: #fff;
  background-color: #d87e00;
  z-index: 100;
  position: relative;
}

.begin image {
  width: 38rpx;
  height: 38rpx;
}

.change {
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  color: #d87e00;
  text-align: center;
}

.award {
  margin: 0 auto 20rpx;
  padding: 26rpx 20rpx;
  width: 92%;
  border-radius: 20rpx;
  box-sizing: border-box;
  background-color: rgba(255, 255, 255, 0.5);
}

.award .title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #bb1d11;
}

.award .title image {
  margin-right: 6rpx;
  width: 30rpx;
  height: 30rpx;
}

.award .award_content {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #fff;
}

.checkMyAward {
  position: relative;
  margin: 60rpx auto 0;
  width: 495rpx;
  height: 70rpx;
}

.checkMyAward .btn {
  position: absolute;
  top: 10rpx;
  width: 100%;
  height: 100%;
  left: 0px;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
}

.shade{
  width: 100%;
  height: 100%;
  background-color:rgba(0,0,0,0.8);
  position:fixed;
  z-index: 999;
  top:0;
  left: 0;
}
/* 未中奖 */
.shade .pop{
  width: 481rpx;
  height: 322rpx;
  border-radius: 4rpx;
  background-color: #EDD9B3;
  position: absolute;
  top: 360rpx;
  left: 142rpx; 

}
.shade .pop text{
  font-size: 31rpx;
  font-weight: bold;
  color: #BB1D11;
  display: flex;
  justify-content: center;
  padding-top: 99rpx;
}
.shade .pop .knowBtn{
  width: 195rpx;
  height: 56rpx;
  border-radius: 4rpx;
  background-color: #BF1E2E;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  margin-top: 58rpx;
  line-height: 56rpx;
}

/* 中奖 */
.shade .gift{
  width: 594rpx;
  height: 512rpx;
  position: absolute;
  top: 232rpx;
  left: 63rpx;
  z-index: 11;
  animation: change .3s linear forwards;
}
@keyframes change{
  0%{width: 0;height: 0;opacity: 0;transform: scale(0);}
  100%{
    width: 594rpx;
    height: 512rpx;
    opacity: 1;
    transform: scale(1);
  }
}
.shade .success{
  width: 100%;
  position: absolute;
  top: 0;
   z-index: 12;
}
.shade .success image{
  width: 186rpx;
  height: 54rpx;
  margin: 229rpx 0 0 217rpx; 
}
.shade .success text{
  font-size: 35rpx;
  color: white;
  display: flex;
  justify-content: center;
}
.shade .success .btn{
  width: 124rpx;
  height: 39rpx;
  background-color: #FFD800;
  font-size: 24rpx;
  color: #DD2C3C;
  margin: 27rpx 0 0 240rpx;
  text-align: center;
  /* display: flex;
  align-items: center;
  justify-content: center; */
}
