.tab-money {
  margin-top: 20rpx;
  padding: 18rpx;
  border-top: 1px solid #F3F3F3FF;
  border-bottom: 1px solid #F3F3F3FF;
  font-size: 26rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 37rpx;
}

.tab-action {
  padding: 20rpx;
  background: #fff;
}

.tab-action button {
  width: 178rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 4rpx;
  border: 1px solid rgba(155, 155, 155, 1);
  font-size: 28rpx;
  font-family: PingFang-SC-Medium, PingFang-SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
