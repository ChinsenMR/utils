/* pages/storeIndex/storeIndex.wxss */
.store-top{
  background: #ffffff;
}
.store-top>.img-bg{
  position: relative;
  width: 100%;
  height: 216rpx;
}
.store-title{
  position: absolute;
  left: 200rpx;
  bottom: 15rpx;
  color: #ffffff;
  font-size: 15px;
}
.st-bars{
  position: relative;
  height: 120rpx;
}
.st-bars>.img-box{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 180rpx;
  height: 180rpx;
  border: 2rpx solid #E5E5E5;
  overflow: hidden;
  box-sizing: border-box;
}
.right{
  padding-left: 180rpx;
  box-sizing: border-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  height: 120rpx;
  font-size: 12px;
  color: #999999;
}
.str-tab{
  flex: 1;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.str-tab>image{
  flex-shrink: 0;
  width: 44rpx;
  height: 44rpx;
}
.store-products{
  padding-left: 18rpx;
  padding-top: 18rpx;
  box-sizing: border-box; 
  background: #ffffff;
}
.pro-item{
  display: inline-block;
  width: 50%;
  padding-right: 18rpx;
  padding-bottom: 18rpx; 
  box-sizing: border-box;
}
.item-wrap{
  border: 2rpx solid #E5E5E5;
}
.item-wrap>.img-box{
  position: relative;
  width: 100%;
  padding-bottom: 100%; 
  box-sizing: border-box;
}
.item-wrap>.img-box>image{
  position: absolute;
}
.item-wrap>.img-box>.sale-count{
  position: absolute;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  text-align: right;
  padding: 6rpx 10rpx;
  box-sizing: border-box;
  font-size: 12px;
  color: #999999;
  background: #f5f5f5;
}
.item-wrap>.title{
  padding: 13rpx 13rpx 0 13rpx;
  box-sizing: border-box;
  width: 100%;
  height: 38px;
  line-height: 16px;
  font-size: 12px;
   word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden; /** 隐藏超出的内容 **/
}
.price-box{
  margin-top: 3px;
  padding-bottom: 8rpx;
  padding-left: 13rpx;
  box-sizing: border-box;
}
.price-box>.icon-red{
  font-size: 12px;
  color: #FA7153;
}
.price-box>.current-price{
  font-size: 18px;
  color: #FA7153;
}
.price-box>.original-price{
  margin-left: 16rpx;
  font-size: 12px;
  color: #999999;
  text-decoration: line-through;
}
.expressage-search{
  margin-top: 36rpx;
  margin-bottom: 200rpx;
  display: block;
  width: 250rpx; 
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30px;
  font-size: 15px;
  color: #61B7FF;
  border: 2rpx solid #61B7FF;
}