page{
  padding-top: 88rpx;
  box-sizing: border-box;
}
.nav {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  display: flex;
  margin-top: 2rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #f6f6f6;
}

.left {
  position: relative;
}

.left::after {
  content: '';
  position: absolute;
  display: block;
  width: 2rpx;
  height: 40rpx;
  top: 20rpx;
  right: 0;
  background-color: #eee;
}

.default {
  flex: 1;
  text-align: center;
  color: #bebebe;
}

.red {
  flex: 1;
  text-align: center;
  font-weight: 600;
  color: #e0001b;
  border-bottom: 6rpx solid #e0001b;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

.tabItem {
  display: flex;
  padding: 20rpx 16rpx;  
  width: 100%;
  height: 80rpx;
  margin-top: 2rpx;
  background-color: #fff;
}

.tanItemTop {
  margin-top: 30rpx;
}

.tabItem .tleft {
  width: 10%;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  color: #666;
}

.tabItem .img {
  position: relative;
  width: 11%;
  flex-shrink: 1
}
.tabItem .img view{
  width: 80rpx;
  height: 80rpx;
}
.tabItem .img1 {
  position: absolute;
  top: -14rpx;
  left: -10rpx;
  width: 50%;
  height: 50%;
}

.tabItem .right {
  padding: 0 32rpx 0 20rpx;
  width: 79%;
  font-size: 30rpx;
  box-sizing: border-box;
}

.tabItem .right .r_top {
  display: flex;
  justify-content: space-between;
}

.tabItem .right .r_top .price {
  color: #e0001b;
}

.tabItem .right .r_bottom {
  margin-top: 20rpx;
  width: 100%;
  height: 16rpx;
  border-radius: 10rpx;
  background-color: #f5f5f5;
}

.tabItem .right .r_bottom .r_bb {
  width: 76%;
  height: 16rpx;
  border-radius: 10rpx;
  background-color: #e0001b;
}
.tabItem .right .r_bottom .r_bb1{
  width: 50%;
}
.tabItem .right .r_bottom .r_bb2{
  width: 40%;
}

/*缺省页  */
.empty{
  position: fixed;
  top: 80rpx; 
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  color: #666666;
  font-size: 14px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty1>image,.empty>image{
  width: 360rpx;
  height: 360rpx; 
}

/*canvas  */
.canvas-box{position: fixed;top:999999rpx;left: 0}
.img-box{padding: 32rpx;background-color: rgba(0, 0, 0, 0);position: relative}
.img-box image.qrcode-img{width: 480rpx;height: 480rpx;background-color: #f9f9f9}
.img-box .bg{
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 506rpx;
  height: 506rpx;
  z-index: -1;
}
.empty>.img-title{
  width: 598rpx;
  height: 88rpx;
  margin-top: 78rpx;
  margin-bottom: 66rpx;
}
.empty1{
  position: fixed;
  top: 30%; 
  left: 50%;
  transform: translate(-50%,-40%);
  z-index: 2;
  color: #666666;
  font-size: 14px;
  text-align: center;
}