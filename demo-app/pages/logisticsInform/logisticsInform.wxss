/* pages/logisticsInform/logisticsInform.wxss */
page{
  background: #f5f5f5;
}
.company-info{
  padding: 30rpx 0 30rpx  30rpx;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  background: #ffffff;
  box-sizing: border-box;
  border-top: 2rpx solid #e5e5e5; 
}
.company-info>image{
  margin-right: 26rpx;
  flex-shrink: 0;
  width: 72rpx;
  height: 72rpx;
}
.company-info>.right>.company-name{
  display: block;
  font-size: 28rpx;
  color: #333333;
}
.company-info>.right>.order-number{
  font-size: 26rpx;
  color: #666666;
}
/*列表区*/
.content{
  margin-top: 20rpx;
  padding: 30rpx 0;
  box-sizing: border-box; 
  background: #ffffff;
  font-size: 26rpx;
}
.content>.item{
  position: relative;
  margin-top: 30rpx;
  padding: 0 30rpx 0 125rpx;
  box-sizing: border-box; 
}

/*左边连线 start  */
.circle{
  position: absolute;
  top: 50%;
  left: 57rpx;
  transform: translateY(-50%);
  width: 16rpx;
  height: 16rpx;
  background: #FF6073;
  border-radius: 100%;
}
.content>.item:before{
  content: " ";
  display: block;
  position: absolute;
  bottom: -100%;
  left: 63rpx;
  height: 150%;
  width: 4rpx;
  background: #FF6073;
}
.content>.item:last-child:before{
  display: none;
}
/*左边连线 end  */

.content>.item:first-child{
  margin-top: 0 !important;
}
.content>.item>.department,.content>.item>.state{
  color: #666666
}
.content>.item>.date{
  display: block;
  color: #999999;
}
.content>.active>.department,.content>.active>.state{
  color: #E0001B;
}
.content>.active>.date{
  color: #E0001B;
}

.copyBtn{
  color: #999999;
  font-size: 30rpx;
  border: 2rpx solid #e5e5e5;
  margin-left: 40rpx;
  padding:0 20rpx 0 20rpx;
}
.show-msg{
  text-align: center;
  color: #666;
}