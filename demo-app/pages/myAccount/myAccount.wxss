.top .top_content .c_center {
  display: flex;
  justify-content: center;
  margin: 100rpx auto 80rpx;
  text-align: center;
  font-size: 46rpx;
}
.top .top_content .c_center .symbel{
  margin-top: 14rpx;
  font-size: 30rpx;
}
.top .top_content .c_bottom {
  font-size: 32rpx;
  text-align: center;
}

.items{
  display: flex;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  background-color: #fff;
}
.items navigator{
  flex: 1;
  text-align: center;
}
.items .right{
  position: relative;
}
.items .right::after{
  content: '';
  position: absolute;
  display: block;
  width: 2rpx;
  height: 46rpx;
  top: 0;
  right: 0;
  background-color: #f5f5f5;
}

.list navigator{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  margin-bottom: 2rpx;
  width: 100%;
  font-size: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.list navigator .left{
  display: flex;
  width: 94%;
  color: #666;
}
.list navigator .left .img{
  margin-right: 20rpx;  
  width: 40rpx;
  height: 40rpx;
}
.list navigator .left image{
  width: 100%;
}

.list navigator .right{
  display: flex;
  align-items: center;
  /* margin-left: 160rpx; */
  width: 6%;
}

.list navigator .right .img{
  display: flex;
  align-items: center;
  margin-right: 20rpx;  
  width: 70rpx;
  height: 50rpx;
}
.list navigator .right image{
  width: 100%;
  height: 50%;
}

