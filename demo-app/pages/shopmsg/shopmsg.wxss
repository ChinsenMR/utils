.top {
  display: flex;
  margin-top: 2rpx;
  margin-bottom: 30rpx;
  padding: 30rpx 20rpx 20rpx;
  width: 100%;
  /* height: 170rpx; */
  box-sizing: border-box;
  background-color: #fff;
}

.top .t_left {
  width: 20%;
  height: 170rpx;
  /* border-radius: 50%; */
  /* overflow: hidden; */
}

.top .t_left image {
  width: 100%;
  height: 90%;
  border-radius: 50%;
  border: 2rpx solid #e5e5e5;
  
}

.top .t_right {
  padding-top: 16rpx;
  padding-left: 40rpx;
  width: 76%;
  height: 170rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #999;
}

.top .t_right .newUpload {
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  color: #fff;
  background-color: #e0001b;
}

.top .t_right .suggest {
  margin-top: 20rpx;
}

.msg {
  display: flex;
  padding: 20rpx 40rpx;
  margin-bottom: 2rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.msg .mst_intro {
  line-height: 1.4rem;
}

.introduction {
  width: 100%;
  height: 170rpx;
  box-sizing: border-box;
}

.msg .msg_left {
  width: 26%;
  color: #333;
}

.msg .msg_right {
  width: 74%;
  font-size: 30rpx;
  color: #666;
}

textarea {
  border: none;
  outline: none;
  width: 100%;
  height: 120rpx;
}

.btn {
  margin: 0 auto;
  margin-top: 60rpx;
  padding: 5rpx 0;
  width: 90%;
  text-align: center;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #e0001b;
}

.inputPlace {
  font-size: 28rpx;
  color: #bfbfbf;
}
