/* pages/couponDetail/couponDetail.wxss */
.item {
  position: relative;
  width: 100%;
  height: 170rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}

.item>.bg {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}

.item>.content {
  flex: 1;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  box-sizing: border-box;
}

.item>.content>.left {
  /* margin-right: 30rpx; */
  font-size: 40rpx;
}

.item>.content .red{
  color: #E0001B !important;
}
.item>.content .green{
  color: #89D276 !important;
}
.item>.content .yellow{
  color: #FF950D !important;
}
.content>.left>.money {
  font-size: 60rpx;
}

.content>.right {
  flex: 1;
  margin-right: 36rpx;
}

.content>.right>.info {
  display: block;
  font-size: 36rpx;
  font-weight: lighte;
  color: #666;
  text-align: center;
  margin-bottom: 4rpx;
}

.content>.right>.date {
  display: block;
  font-size: 22rpx;
  color: #a6a6a6;
  text-align: center;
}

.item>.btn {
  display: block;
  height: 160rpx;
  line-height: 160rpx;
  flex-shrink: 0;
  width: 156rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
}
.box{
  margin-top: 20rpx;
}
.top,.bottom{
  padding: 30rpx;
  margin-top: 2rpx;  
  font-size: 32rpx;  
  background-color: #fff;
}

.top{
  display: flex; 
  padding: 30rpx;   
  align-items: center;
  justify-content: space-between;  
}
.top>view:first-child{
  color: #999;
}
.top>view:last-child{
  color: #333;
}
.top .money{
  font-size: 60rpx;
}
.bottom{
  background-color: #fff;
}
.bottom>view{
  display: flex;
  justify-content: space-between;
  margin-top: 6rpx;
}
.bottom>view:first-child{
  margin-top: 0;
}
.bottom>view>text:first-child{
  color: #999;
}
.bottom>view>text:last-child{
  color: #333;
}

.confirm{
  margin: 80rpx auto;
  padding: 20rpx;  
  width: 90%;
  text-align: center;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #e0001b
}
.check-product{
  margin-top: 3px;
  color: #007ACC;
  text-decoration: underline;
}