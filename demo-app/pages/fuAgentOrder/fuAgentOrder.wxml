<view class='shopORders'>
  <view class="Skin-DistributorOrders">


     <!-- 搜索 -->

		<view class="orderList" style="margin-top: 15px;">
			<view class="actives all-orders" data-oid="{{item.OrderId}}" data-status="{{item.OrderStatusNum==2}}" bindtap="chooseFN"  wx:for="{{dataList}}" wx:key="{{index}}">
				<view >
					<view class="orderinfo">
						<view>订单编号：{{item.OrderId}}</view>
						<view>订单日期：{{item.OrderDate}}</view>
						<view>订单买家：{{item.Username}}</view>
                        <view>收货姓名：{{item.ShipTo}}</view>
						<view>联系电话：{{item.CellPhone}}</view>
                        <view>收货地区：{{item.ShippingRegion}}</view>
						<view>收货地址：{{item.Address}}</view>
            <view>收货方式：<text style='color:#FF950D;'>{{item.ModeName}}</text></view>
						<view>成交金额：<text class="coloractive">￥{{item.OrderTotal}}</text></view>
						<view class="state">{{item.OrderStatus}}</view>
					</view>
					<view class="commodity" wx:for="{{item.OrderItems}}" wx:for-index="idx" wx:for-item="itemInfo">
						<view class="commodityImg"><image src='{{itemInfo.Img}}'></image></view>
						<view class="commodityinfo">
							<view>{{itemInfo.ProductName}}</view>
							<view class="money">价格：￥{{itemInfo.Price}} <text>x{{itemInfo.Quantity}}</text></view>
						</view>
					</view>
					<view class="commodityNum"><text wx:if="{{item.OrderStatusNum==2}}" style="color:red;margin-right:20rpx;">点击发货</text>共{{item.orderCount}}件商品 </view>
				</view>
			</view>
		</view>
		<view class="under"></view>
	</view>
</view>



















