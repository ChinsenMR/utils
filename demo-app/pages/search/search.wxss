/* pages/search/search.wxss */

.search-box {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  padding: 0 30rpx;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 44px;
  border-top: 2rpx solid #f5f5f5;
  box-sizing: border-box;
  background: #fff;
}

.search-box>.input-box {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
}

