.top{
  margin-top: 2rpx;
  background-color: #fff; 
}
.list {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  box-sizing: border-box;
  margin-left: 36rpx;  
  background-color: #fff;
  border-bottom: 2rpx solid #e5e5e5;
}

.list .left {
  display: flex;
  align-items: center;
  width:30%;
}

.list .left image {
  margin-left: 10rpx;
  margin-right: 30rpx;
  width: 40rpx;
  height: 40rpx;
}

.list .right {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 70%;
}

.list .right image {
  margin-right: 30rpx;
  width: 34rpx;
  height: 34rpx;
}

.btn {
  margin: 70rpx auto 0;
  /* padding: 8rpx 0; */
  width: 90%;
  font-size: 32rpx;
  text-align: center;
  border-radius: 6rpx;
  color: #fff;
  background-color: #e0001b;
}

.box .title {
  margin: 100rpx 0 50rpx 0;
  text-align: center;
  font-size: 30rpx;
  color: #333;
}

.box .li {
  display: flex;
  margin-bottom: 30rpx;
}

.box .li image {
  padding: 0 32rpx 0 28rpx;
  width: 40rpx;
  height: 40rpx;
}

.box .li view {
  font-size: 24rpx;
  color: #666;
}
