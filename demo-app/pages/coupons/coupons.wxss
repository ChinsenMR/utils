/* pages/coupons/coupons.wxss */
page{
  background: #f5f5f5;
}
.coupons>.item{
  position: relative;
  margin-top: 20rpx;
  width: 100%;
  height: 170rpx;
  display: -webkit-flex;
  display: flex;
  align-items: center;
}
.coupons>.item>.bg{
  position: absolute;
  top: 0;left: 0;
  z-index: -1;
  width: 100%;
  height: 100%;
}
.coupons>.item>.content{
  flex: 1;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  box-sizing: border-box; 
}
.item>.content>.left{
  margin-right: 30rpx;
  /* flex-shrink: 0; */
  font-size: 40rpx;
}
.item>.content .red{
  color: #E0001B !important;
}
.item>.content .green{
  color: #89D276 !important;
}
.item>.content .yellow{
  color: #FF950D !important;
}
.item>.content .gray{
  color: #CCCCCC !important;
}
.content>.left>.money{
   font-size: 60rpx;
}
.content>.right{
  flex: 1;
  margin-right: 36rpx;
}
.content>.right>.info{
  display: block;
  font-size: 36rpx;
  font-weight: lighte;
  color: #333333;
  text-align: center;
  margin-bottom: 4rpx;
}
.content>.right>.date{
  display: block;
  font-size: 22rpx;
  color: #A6A6A6;
  text-align: center;
}
.coupons>.item>.btn{
  display: block;
  height: 160rpx;
  line-height: 160rpx;
  flex-shrink: 0;
  width: 156rpx;
  text-align: center;
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
}
.empty{
  position: fixed;
  top: 30%;
  left: 50%;
  transform: translate(-50%,-40%);
}
.empty>image{
  width: 360rpx;
  height: 360rpx;
}
.empty>.empty-text{
  display: block;
  font-size: 32rpx;
  text-align: center;
  color: #666666;
}