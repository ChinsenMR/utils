/* pages/myCollect/myCollect.wxss */

.listItem {
  display: flex;
  padding: 26rpx;
  margin-top: 2rpx;
  margin-bottom: 2rpx;
  width: 100%;
   height: 220rpx; 
  box-sizing: border-box;
  color: #333;
  background-color: #fff;
}

.listItem .left {
  display: flex;
  align-items: center;
  width: 20%;
  height: 160rpx;
}

.listItem .left image {
  width: 100%;
  /* height: 100%; */
   height: 140rpx; 
}

.listItem .right {
  position: relative;
  padding: 10rpx 20rpx;
  width: 80%;
  box-sizing: border-box;
  font-size: 28rpx;
}

.listItem .right .r_top {
  width: 100%;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

