  color: #c9c9c9;
} */

.listItem .right .r_bottom {
  position: absolute;
  left: 10rpx;
  bottom: 6rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.listItem .right .r_bottom .price {
  font-size: 32rpx;
  color: #e0001b;
}

.listItem .right .r_bottom .cancel {
  margin-right: 10rpx;
  padding: 6rpx 20rpx;
  border: 2rpx solid #999;
}

.empty{
  position: fixed;
  top: 30%;
  left: 50%;
  z-index: -1;
  transform: translate(-50%,-40%);
  color: #666666;
  font-size: 14px;
  text-align: center;
}
.empty>image{
  width: 360rpx;
  height: 360rpx;
}