page{
  width:100%;
  height:2296rpx;
}
.bg{
  width:100%;
  height:100%;
  background-size: 100% 100%;
  position: relative
}
.content{
  width: 100%;
  position: absolute;
  top: 0;
}
.top_img{
  width: 453rpx;
  height: 176rpx;
  margin: 0 auto;
}
.brand{
  width: 670rpx;
  height: 784rpx;
  margin: 88rpx 0 0 40rpx;
  position: relative
}
.brand .con{
  position:absolute;
  top: 0;
  width: 100%
}
.brand .con .text{
  font-size: 34rpx;
  color: #C7670E;
  margin: 30rpx 0 0 175rpx;
}
.brand .con .text text{
  color: #E7244B;
}
.brand .con .img{
  width: 262rpx;
  height: 75rpx;
  position: absolute;
  top: 640rpx;
  left: 204rpx
}
.brand .container{
  width: 585rpx;
  height: 480rpx;
  position: absolute;
  top: 155rpx;
  left: 45rpx;
  display: -webkit-flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.brand .container image{
  width: 177rpx;
  height: 225rpx;
}
.button{
  display: flex;
}
.btn{
  width: 230rpx;
  height: 76rpx;
  border-radius: 38rpx;
  background-color: #FFF6E4;
  margin: 34rpx 0 0 80rpx; 
  font-size: 28rpx;
  color: #BB2442;
  text-align: center;
  line-height: 76rpx;
  -moz-box-shadow:0px 5px 3px #C57E00; 
  -webkit-box-shadow:0px 5px 3px #C57E00; 
