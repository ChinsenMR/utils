.addr-wrap {
  position: relative;
  margin-top: 2rpx;
  padding: 26rpx 0;
  font-size: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.addr-wrap:after {
  content: " ";
  display: block;
  width: 100%;
  height: 8rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

.addr-wrap .list {
  padding-left: 30rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  color: #333;
}

.addr-wrap>.addr-info {
  margin-top: 10rpx;
  color: #333;
  width: 80%;
}

.addr-wrap>.right-nav-box {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%) scale(0.8);
}

.addr-wrap>.right-nav-box>image {
  width: 100%;
  height: 100%;
}

.borderImg {
  width: 100%;
  height: 10rpx;
}

.orderDetail {
  margin-top: 30rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.orderDetail .o_top {
  display: flex;
  padding: 30rpx;
  justify-content: space-between;
  color: #999;
}

.orderDetail .o_top .ot_right {
  color: #e0001b;
}

.cart-list {
  padding-left: 30rpx;
  box-sizing: border-box;
  width: 100%;
  border-top: 2rpx solid #f5f5f5;
  background-color: #fff;
  overflow: hidden;
}

.cart-list>view {
  position: relative;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  padding: 20rpx 20rpx 20rpx 0;
  box-sizing: border-box;
  border-bottom: 2rpx solid #eee;
}

.cart-list>view:last-child {
  border-bottom: none;
}

.cart-list>view>.img-box {
  width: 144rpx;
  height: 144rpx;
  flex-shrink: 0;
}

.cart-list>li>.del-img-box {
  margin-left: 10rpx;
  width: 48rpx;
  height: 48rpx;
  flex-shrink: 0;
}

.cart-list>view>.img-box>image, .cart-list>view>.del-img-box>image {
  width: 100%;
  height: 100%;
}
.cart-list>view>.img-box{
  width: 20%;
}
.cart-list>view>.right{
  position: relative;
  width: 78%;
}

.cart-list>view>.right>.title {
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden; /** 隐藏超出的内容 **/
  color: #333;
}

.cart-list>view>.right>.wrap {
  position: absolute;
  bottom: 10rpx;
  left: 0;
  width: 100%;
  padding: 0 10rpx;
  margin-top: 20rpx;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart-list>view>.right>.wrap>.price {
  width: 80%;
  color: #e0001b;
  /* font-weight: bold; */
}

.cart-list>view>.right>.wrap>.count {
  width: 20%;
  text-align: right;
  color: #999;
}

.cart-list>view>.right>.wrap>.btn-box {
  margin-right: -64rpx;
  display: -webkit-flex;
  display: flex;
}

.cart-list>view>.right>.wrap>.btn-box>text {
  width: 60rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 4rpx;
  background-color: #c9c9c9;
  color: #fff;
  font-size: 36rpx;
}

.cart-list>view>.right>.wrap>.btn-box>text.no-reduce {
  background-color: #f0f0f0;
}

.cart-list>view>.right>.wrap>.btn-box>text:nth-child(2) {
  width: 120rpx;
  background-color: #fff;
  color: #999;
  font-size: 28rpx;
}

.bottom {
  padding: 30rpx;
  font-size: 32rpx;
  border-top: 2rpx solid #f5f5f5;
  color: #999;
  background-color: #fff;
}

.bottom>view {
  display: flex;
  justify-content: space-between;
  margin-top: 6rpx;
}

.bottom>view:first-child {
  margin-top: 0;
}

.bottom>view>text:first-child {
  color: #999;
}
.pay{
  font-size: 34rpx;
  color: #e0001b;
}
