/* pages/detailsEvalutePage/detailsEvalutePage.wxss */

.bottom {
  background-color: #fff;
}

.bottom_title {
  color: #333;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #e5e5e5;
  font-weight: bold;
}

/*评价  */

.all-evaluate {
  background: #fff;
}

.all-evaluate>.ae-top {
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  width: 100%;
  font-size: 14px;
  font-weight: 700;
}

.all-evaluate>.ae-top image {
  margin-right: 14rpx;
  margin-top: 4px;
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
}

.evaluate-contents {
  padding-left: 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #e5e5e5;
}

.items {
  padding: 30rpx 30rpx 30rpx 0;
  box-sizing: border-box;
  border-bottom: 2rpx solid #e5e5e5;
}

.items:last-child {
  border-bottom: none;
}

.items>.items-top {
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #999;
}

.items>.items-content {
  font-size: 14px;
  color: #666;
  width: 100%;
  word-break: break-all;
}
