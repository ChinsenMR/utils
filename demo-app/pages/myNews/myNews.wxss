/* pages/myNews/myNews.wxss */
page{
  background: #f5f5f5;
}
.list{
  margin-top: 20rpx;
  box-sizing: border-box;
  display: block;
  width: 100%;
  background: #ffffff;
}
swiper{
  width: 100%;
  height: 124rpx;
}
.list navigator{
  position: relative;
  display: block;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #F6F6F6;
}
.list navigator:last-child{
  border-bottom: none;
}
.list navigator>.top-text{
  font-size: 26rpx;
  color: #666666;
}
.list navigator>.date{
  display: block;
  font-size: 24rpx;
  color: #999999;
}
.list navigator>.right-arrow{
  width: 16rpx;
  height: 16rpx;
  display: inline-block;
  border-top: 4rpx solid #999999;
  border-right: 4rpx solid #999999;
  transform: translateY(-50%) rotate(45deg);
  position: absolute;
  right: 30rpx;
  top: 50%;
}
.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1;
  padding: 20rpx 0;
  padding-left: 260rpx;
  box-sizing: border-box;
  width: 100%;
  font-size: 32rpx;
  color: #666666;
  background: #ffffff;
}

.nothing{
  padding: 30rpx 0; 
  font-size: 26rpx;
  text-align: center;
  color: #999999;
  background-color: #f5f5f5;
}

.empty{
  position: fixed;
  top: 30%;
  left: 50%;
  z-index: -1;
  transform: translate(-50%,-40%);
  color: #666666;
  font-size: 14px;
  text-align: center;
}
.empty>image{
  width: 360rpx;
  height: 360rpx;
}