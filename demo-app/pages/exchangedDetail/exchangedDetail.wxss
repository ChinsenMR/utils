/* pages/exchangedDetail/exchangedDetail.wxss */
page{
  background: #f5f5f5;
}
.exchanged-item{
  background: #ffffff;
  border-bottom: 2rpx #e5e5e5 solid; 
  box-sizing: border-box;
}
.exchanged-item>.top{
  position: relative;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 30rpx;
  border-top: 2rpx #e5e5e5 solid; 
  border-bottom: 2rpx #e5e5e5 solid; 
  box-sizing: border-box;
  color: #666666;
}
.exchanged-item>.top>.title{
  font-size: 26rpx;
}
.exchanged-item>.top>.right{
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
  color: #E0001B;
}
.top>.right>.money{
  font-size: 30rpx;
}
.top>.right>.state{
  font-size: 26rpx;
}
.content{
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
}
.content>.left>view{
  margin-top: 4rpx;
}
.content>.left,.left>.title-box>.title{
  font-size: 26rpx;
  color: #333333;
}
.left>.item>text,.left>.title-box>.title-name{
  color: #999999;
  font-size: 24rpx;
}
.left>.title-box{
  display: -webkit-flex;
  display: flex;

}
.left>.title-box>.title{
  flex-shrink: 0;
}
.left>.title-box>.title-name{
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden; /** 隐藏超出的内容 **/
}
.progress{
  padding: 20rpx 30rpx; 
  box-sizing: border-box;
}
.progress>.item{
  margin-top: 6rpx;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #999999;
}
.exchanged-item>.progress>.red{
  color: #E0001B;
}