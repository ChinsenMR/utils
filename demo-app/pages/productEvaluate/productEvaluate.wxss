/* pages/productEvaluate/productEvaluate.wxss */

page {
  background: #f5f5f5;
}

.products {
  border-top: 2rpx solid #e5e5e5;
  box-sizing: border-box;
}

.products .pro-item {
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  background: #fff;
  border-bottom: 2rpx solid #e5e5e5;
}

.products .pro-item>image {
  flex-shrink: 0;
  width: 144rpx;
  height: 144rpx;
  margin-right: 30rpx;
}

.products .pro-item>.right {
  flex: 1;
  font-size: 28rpx;
}

.pro-item>.right>.title {
  font-weight: bold;
  height: 76rpx;
  line-height: 38rpx;
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 2; /** 显示的行数 **/
  overflow: hidden; /** 隐藏超出的内容 **/
}

.pro-item>.right>.bottom {
  margin-top: 40rpx;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
}

.right>.bottom>.money {
  color: #e0001b;
  font-weight: bold;
}

.right>.bottom>.quantity {
  color: #999;
}

.text-wrap {
  margin-top: 20rpx;
  padding: 30rpx 30rpx;
  background: #fff;
  font-size: 26rpx;
}

.text-wrap>textarea {
  width: 100%;
  height: 167rpx;
}

.btn-wrap {
  margin-top: 60rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  width: 100%;
  height: 88rpx;
}

.btn-wrap>button {
  width: 100%;
  height: 100%;
  line-height: 88rpx;
  background: #e0001b;
  color: #fff;
  font-size: 30rpx;
  border-radius: 8rpx;
}

.bottom {
  margin-top: 40rpx;
  background-color: #fff;
}

.bottom_title {
  color: #333;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #e5e5e5;
  font-weight: bold;
}

/*评价  */

.all-evaluate {
  background: #fff;
}

.all-evaluate>.ae-top {
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
  width: 100%;
  font-size: 14px;
  font-weight: 700;
}

.all-evaluate>.ae-top image {
  margin-right: 14rpx;
  margin-top: 4px;
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
}

.evaluate-contents {
  padding-left: 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #e5e5e5;
}

.items {
  padding: 30rpx 30rpx 30rpx 0;
  box-sizing: border-box;
  border-bottom: 2rpx solid #e5e5e5;
}

.items:last-child {
  border-bottom: none;
}

.items>.items-top {
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #999;
}

.items>.items-content {
  font-size: 14px;
  color: #666;
  width: 100%;
  word-break: break-all;
}
