/* pages/shippingAddress/shippingAddress.wxss */

page {
  background: #f5f5f5;
}

.shipping-address {
  border-top: 2rpx solid #e5e5e5;
  width: 100%;
}

.shipping-address .content {
  padding: 22rpx 30rpx 0 15rpx;
  background: #fff;
  border-bottom: 2rpx solid #e5e5e5;
  margin-bottom: 20rpx;
  box-shadow: 0px 15px 10px -15px #ccc;
}

.liTop {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 10px;
  border-bottom: 2rpx solid #e5e5e5
}

.liTop .left {
  width: 85%;
}

.liTop .left .name {
  font-size: 14px;
  color: #333;
}

.liTop .left .addr {
  display: block;
  width: 100%;
  font-size: 13px;
  color: #999;
  word-break: break-all;
}

.liTop .right .edit {
    width: 20rpx;
    height: 20rpx;
    border-top: 2px solid #C6C6C6;
    border-right: 2px solid #C6C6C6;
    transform: rotate(45deg);
}

.operation {
  width: 90%;
  height: 44rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 5% 0;
  margin: 0 auto;
  font-size: 30rpx;
}

.addressmor{
  display: flex;
  align-items: center;
}

.active{
  color: #ff5722
}

/* 删除 */
.addressmorr{
  display: flex;
  align-items: center;
}
.addressmorr image {
  width: 60rpx;
  height: 60rpx;
}

.addr-btn-add {
  margin: 53rpx auto;
  display: block;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
}


.addr-btn-add>button {
  border-radius: 4px;
  border: none;
  background: #e0001b;
  font-size: 15px;
  color: #fff;
  width: 45%;
}
.greed{
  background: #0ab906 !important;
}
/*空列表  */

.empty {
  margin: 90rpx auto 0;
  padding: 30rpx;
  width: 100%;
  /* height: 360rpx; */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.empty>image {
  width: 360rpx;
  height: 360rpx;
}

.empty>text {
  color: #666;
  font-size: 15px;
}
